// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(cuid())
  firstName String
  lastName  String
  email     String     @unique
  createdAt DateTime   @default(now())
  incomes   Income[]
  outgoings Outgoing[]
}

model Income {
  id         String   @id @default(cuid())
  amount     Decimal  @default("0")
  createdAt  DateTime @default(now())
  userId     String
  categoryId String
  notes      String?
  expectedDate DateTime?
  actualDate   DateTime?
  user       User     @relation(fields: [userId], references: [id])
  category   Category @relation(fields: [categoryId], references: [id])
}

model Outgoing {
  id         String   @id @default(cuid())
  amount     Decimal  @default("0")
  createdAt  DateTime @default(now())
  userId     String
  categoryId String
  user       User     @relation(fields: [userId], references: [id])
  category   Category @relation(fields: [categoryId], references: [id])
}

model Category {
  id        String       @id @default(cuid())
  name      String
  type      CategoryType
  createdAt DateTime     @default(now())
  incomes   Income[]
  outgoings Outgoing[]
}

enum CategoryType {
  INCOME
  OUTGOING
}
